.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top:1px solid #ededed;
    border-bottom:1px solid #ededed;
    padding-bottom: 5rpx;

}
.post-author-date{
    margin:10rpx 0 20rpx 10rpx;

}
.post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    border-radius: 50%;
}
.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}
.post-title{
    font-size: 34rpx;
    color:#333;
    margin-left: 10px;
    margin-bottom: 10px;
    font-weight: 600;
}
.post-image{
    width:100%;
    height:450rpx;
    margin-bottom: 15px;
    margin:auto 0;
}
.post-content{
    color:#666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size: 13px;
    line-height: 16rpx;
    margin-left: 10px;
}
.post-like-image{
    height: 16px;
    width: 16px;
    vertical-align: middle;
    margin-right: 10px;
}
.post-like-font{
    vertical-align: middle;
    margin-right: 20px;
    color: #666;
}